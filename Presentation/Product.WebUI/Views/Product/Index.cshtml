@model List<GetProductQueryResult>

@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<h1>Ürünler</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Stok Sayısı</th>
        <th>Fiyat</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.ProductName</td>
            <td>@item.Stock</td>
            <td>@item.Price ₺</td>
            <td>@item.Category.CategoryName</td>
            <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-info">Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Product/CreateProduct" class="btn btn-info">Ekle</a>

